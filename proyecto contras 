import java.util.Random;
imporr java.util.Arrays;
public class GenerarContrasena {

    public static void main(String[] args) {

        // Aqu√≠ decides qu√© tipos de caracteres usar
        boolean usarMayusculas = true;
        boolean usarMinusculas = true;
        boolean usarNumeros = true;
        boolean usarSimbolos = true;

        // L√≥gica proposicional para formar el conjunto de caracteres
        String caracteres = "";
        if (usarMayusculas) caracteres += "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        if (usarMinusculas) caracteres += "abcdefghijklmnopqrstuvwxyz";
        if (usarNumeros) caracteres += "0123456789";
        if (usarSimbolos) caracteres += "#$%&*";

        // Validaci√≥n l√≥gica: si no se elige nada, error
        if (caracteres.equals("")) {
            System.out.println("Error: debes seleccionar al menos un tipo de car√°cter.");
            return;
        }

        int longitud = 8;  // Puedes cambiar la longitud aqu√≠
        StringBuilder contrasena = new StringBuilder();
        Random random = new Random();

        // Generar la contrase√±a
        for (int i = 0; i < longitud; i++) {
            int indice = random.nextInt(caracteres.length());
            contrasena.append(caracteres.charAt(indice));
        }

        System.out.println("Contrase√±a generada: " + contrasena);
        System.out.println("Total de combinaciones posibles: " +
            (long) Math.pow(caracteres.length(), longitud));
    }
// ---- Nueva parte: Ordenamiento ----
        char[] arreglo = contrasena.toString().toCharArray();
        Arrays.sort(arreglo);  // Ordena los caracteres de menor a mayor
        System.out.println("Contrase√±a ordenada: " + new String(arreglo));
    }
} 


